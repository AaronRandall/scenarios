#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), '..', 'lib/scenarios/option_parser/trollop')

opts = Trollop::options do
  opt :ios_app_name, "iOS app name", :type => :string, :default => "Songkick"
  opt :ios_app_path, "iOS app path", :type => :string, :default => "/Users/jenkins/build/workspace/ios-app/Songkick"
  opt :simulator_path, "iOS simulator path", :type => :string, :default => "/Users/jenkins/Library/Application\ Support/iPhone\ Simulator/6.0/Applications/"
  opt :test_name, "Single test to run (all tests run if this is excluded)", :type => :string, :default => nil
  opt :run_on_hardware, "Run the tests on a hardware device (tests run on simulator by default)", :type => :boolean, :default => false
  opt :hardware_id, "The hardware ID of the device to target.  If this is not provided, an attempt will be made to auto-detect the id.", :type => :string, :default => nil
  opt :test_username, "The Songkick username to use for tests.", :type => :string, :default => nil
  opt :test_password, "The Songkick password to use for tests.", :type => :string, :default => nil

  opt :clean_target, "Clean the target test device before running tests", :type => :boolean, :default => true
  opt :clean_project_build_directory, "Clean the Xcode project build directory before running tests", :type => :boolean, :default => true
  opt :build_app, "Build the app (compile with xcodebuild) before running tests", :type => :boolean, :default => true
  opt :install_app, "Install the app (turn this off to simply rerun tests on existing installed app)", :type => :boolean, :default => true
  opt :run_tests, "Run the tests", :type => :boolean, :default => true
end
